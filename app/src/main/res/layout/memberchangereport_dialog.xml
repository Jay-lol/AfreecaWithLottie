<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="20.0dip"
    android:layout_marginEnd="20.0dip"
    android:background="@drawable/alert_dialog2"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100.0dip"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:paddingStart="8.0dip"
                android:paddingTop="20.0dip"
                android:paddingBottom="8.0dip"
                android:text="BJ"
                android:textAlignment="center"
                android:textColor="#ffcccccc"
                android:textSize="16.0sp" />

            <EditText
                android:id="@+id/reportBj"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:hint="BJ 이름을 적어주세요"
                android:textColor="#ffffffff"
                android:textColorHint="#85ffffff"
                android:textSize="14.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="100.0dip"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100.0dip"
                android:layout_height="50.0dip"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:paddingStart="8.0dip"
                android:text="건의 내용"
                android:textAlignment="center"
                android:textColor="#ffcccccc"
                android:textSize="16.0sp" />

            <EditText
                android:id="@+id/suggest"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="건의 내용을 적어주세요(크루명, 가입, 탈퇴)"
                android:maxLines="4"
                android:paddingEnd="8.0dip"
                android:textColor="#ffffffff"
                android:textColorHint="#85ffffff"
                android:textSize="12.0sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:layout_marginLeft="1.0dip"
        android:layout_marginRight="1.0dip"
        android:background="#ff000000" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60.0dip"
        android:orientation="horizontal">

        <Button
            android:id="@+id/reportClose"
            android:layout_width="fill_parent"
            android:layout_height="60.0dip"
            android:layout_weight="1.0"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="취소"
            android:textAllCaps="false"
            android:textColor="#8bffffff"
            android:textSize="14.0sp" />

        <View
            android:layout_width="1.0dip"
            android:layout_height="fill_parent"
            android:background="#ff000000" />

        <Button
            android:id="@+id/reportSubmit"
            android:layout_width="fill_parent"
            android:layout_height="60.0dip"
            android:layout_weight="1.0"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="제출"
            android:textAllCaps="false"
            android:textColor="#bfffffff"
            android:textSize="14.0sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>