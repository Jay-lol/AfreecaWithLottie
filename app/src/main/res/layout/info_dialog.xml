<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginHorizontal="50dp"
    android:background="@drawable/alert_dialog2">

    <TextView
        android:id="@+id/infoStreamerName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Streamer명"
        android:textAlignment="center"
        android:textColor="#e4d5d5d5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/monthview_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="15dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:text="누적 시청자 "
        android:textColor="#e4d5d5d5"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/monthview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/infoStreamerName" />

    <TextView
        android:id="@+id/monthview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="start"
        android:text="-"
        android:textAllCaps="false"
        android:textColor="#e6ffffff"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/monthview_description"
        app:layout_constraintTop_toTopOf="@id/monthview_description" />

    <TextView
        android:id="@+id/monthmaxview_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:text="최대 시청자 "
        android:textColor="#e4d5d5d5"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/monthmaxview"
        app:layout_constraintStart_toStartOf="@+id/monthview_description"
        app:layout_constraintTop_toBottomOf="@id/monthview_description" />

    <TextView
        android:id="@+id/monthmaxview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="start"
        android:text="-"
        android:textAllCaps="false"
        android:textColor="#e6ffffff"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/monthmaxview_description"
        app:layout_constraintTop_toTopOf="@id/monthmaxview_description" />

    <TextView
        android:id="@+id/monthtime_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:text=" 방송 시간 "
        android:textColor="#e4d5d5d5"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/monthtime"
        app:layout_constraintStart_toStartOf="@+id/monthmaxview_description"
        app:layout_constraintTop_toBottomOf="@+id/monthmaxview_description" />

    <TextView
        android:id="@+id/monthtime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="start"
        android:text="-"
        android:textAllCaps="false"
        android:textColor="#e6ffffff"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/monthtime_description"
        app:layout_constraintTop_toTopOf="@id/monthtime_description" />

    <TextView
        android:id="@+id/monthpay_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:text="        시급 "
        android:textColor="#e4d5d5d5"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/monthpay"
        app:layout_constraintStart_toStartOf="@+id/monthtime_description"
        app:layout_constraintTop_toBottomOf="@id/monthtime_description" />

    <TextView
        android:id="@+id/monthpay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="start"
        android:text="-"
        android:textAllCaps="false"
        android:textColor="#e6ffffff"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/monthpay_description"
        app:layout_constraintTop_toTopOf="@id/monthpay_description" />

    <View
        android:id="@+id/view_divide"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#fc00ccff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/monthpay_description" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:paddingStart="0dp"
        android:paddingEnd="10dp"
        android:text="*풍투데이 월간 데이터 기준 (정각마다 갱신)"
        android:textAlignment="viewEnd"
        android:textColor="#adffffff"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_divide" />
</androidx.constraintlayout.widget.ConstraintLayout>