<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.MainActivity">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
                    android:background="@android:color/transparent">
            <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/main_loadingbar"
                    android:layout_width="match_parent" android:layout_height="match_parent"
                    app:lottie_fileName="9743-sheep-drive-car.json"
                    app:lottie_loop="true"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/main_loadingbar"
                android:id="@+id/refresh_layout"
                android:background="@android:color/transparent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/main_view"
                    android:background="@drawable/main00">

                <com.airbnb.lottie.LottieAnimationView
                        app:lottie_loop="true"
                        android:visibility="invisible"
                        android:layout_marginTop="5dp"
                        app:lottie_fileName="27929-live-cairon.json"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/sujan_live"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"/>

                <androidx.cardview.widget.CardView
                        android:layout_width="290dp"
                        android:layout_height="0dp"
                        app:layout_constraintHeight_max="250dp"
                        app:layout_constrainedHeight="true"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="15dp"
                        app:cardBackgroundColor="#333333"
                        app:cardCornerRadius="20dp"
                        android:id="@+id/sujang" app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/sujan_live"
                        app:layout_constraintBottom_toTopOf="@+id/team_first">

                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <ImageView android:layout_width="match_parent"
                                   android:layout_height="0dp"
                                   android:id="@+id/sujang_thumbnail"
                                   app:layout_constraintBottom_toTopOf="@+id/view"
                                   app:layout_constraintStart_toStartOf="parent"
                                   app:layout_constraintEnd_toEndOf="@+id/sujang_rest"
                                   app:layout_constraintTop_toTopOf="parent"/>
                        <com.airbnb.lottie.LottieAnimationView
                                app:lottie_fileName="8266-rest-sloth.json"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                app:lottie_loop="true"
                                android:visibility="invisible"
                                app:layout_constraintBottom_toTopOf="@id/view"
                                android:id="@+id/sujang_rest"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"/>
                        <View android:layout_width="match_parent"
                              android:layout_height="2dp"
                              android:layout_marginBottom="5dp"
                              app:layout_constraintBottom_toTopOf="@id/sujang_title"
                              android:background="#A6A6A6" android:id="@+id/view"/>
                        <TextView android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:textSize="16sp"
                                  android:singleLine="true"
                                  android:ellipsize="marquee"
                                  android:layout_marginStart="8dp"
                                  android:layout_marginEnd="8dp"
                                  android:gravity="center"
                                  android:text="방송제목"
                                  android:layout_marginBottom="8dp"
                                  android:id="@+id/sujang_title"
                                  android:textColor="#fff"
                                  app:layout_constraintBottom_toTopOf="@+id/sujangname"
                                  app:layout_constraintStart_toStartOf="parent"
                                  app:layout_constraintEnd_toEndOf="parent"/>
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:gravity="center"
                                android:textColor="#8587fe"
                                android:text="시조새"
                                android:textSize="14sp" app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:id="@+id/sujangname"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                        android:id="@+id/team_first"
                        app:cardBackgroundColor="#444444"
                        android:layout_width="250dp"
                        app:cardCornerRadius="20dp"
                        android:layout_marginBottom="16dp"
                        android:layout_height="100dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/team_second"
                        app:layout_constraintStart_toStartOf="parent">
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <TextView android:layout_width="70dp"
                                  android:layout_height="wrap_content"
                                  android:id="@+id/team_one"
                                  android:fontFamily="@font/maplestory_bold"
                                  android:text="시"
                                  android:textAlignment="center"
                                  android:layout_marginEnd="10dp"
                                  android:transitionName="changeAct"
                                  android:layout_marginStart="10dp"
                                  android:layout_gravity="center"
                                  android:textColor="#fff" android:textSize="18sp"/>
                        <View android:layout_width="2dp"
                              android:layout_height="match_parent"
                              android:background="#A6A6A6"
                              />
                        <com.airbnb.lottie.LottieAnimationView
                                app:lottie_fileName="8438-mr-cookie-drink.json"
                                app:lottie_autoPlay="false"
                                app:lottie_loop="true"
                                android:visibility="invisible"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/teamOnelotti"/>
                        <com.airbnb.lottie.LottieAnimationView
                                app:lottie_fileName="35627-weather-day-clear-sky.json"
                                app:lottie_autoPlay="false"
                                app:lottie_loop="true"
                                android:visibility="invisible"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/teamOnelottiOn"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/loadingbar"
                        android:background="#4D000000"
                        app:lottie_fileName="8438-mr-cookie-drink2.json"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        android:elevation="50dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                <androidx.cardview.widget.CardView
                        android:id="@+id/team_second"
                        app:cardBackgroundColor="#444444"
                        android:layout_width="250dp"
                        app:cardCornerRadius="20dp"
                        android:layout_height="100dp"
                        android:layout_marginBottom="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/team_third"
                        app:layout_constraintStart_toStartOf="parent">

                    <LinearLayout android:layout_width="match_parent"
                                  android:orientation="horizontal"
                                  android:layout_height="match_parent">

                        <TextView android:layout_width="70dp"
                                  android:layout_height="wrap_content"
                                  android:text="조"
                                  android:id="@+id/team_two"
                                  android:textAlignment="center"
                                  android:transitionName="changeAct"
                                  android:layout_marginEnd="10dp"
                                  android:layout_marginStart="10dp"
                                  android:layout_gravity="center"
                                  android:textColor="#fff" android:textSize="18sp"/>

                        <View android:layout_width="2dp"
                              android:layout_height="match_parent"
                              android:background="#A6A6A6"/>

                        <com.airbnb.lottie.LottieAnimationView
                                app:lottie_fileName="8438-mr-cookie-drink.json"
                                app:lottie_autoPlay="false"
                                app:lottie_loop="true"
                                android:visibility="invisible"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/teamTwolotti"/>
                        <com.airbnb.lottie.LottieAnimationView
                                app:lottie_fileName="35627-weather-day-clear-sky.json"
                                app:lottie_autoPlay="false"
                                app:lottie_loop="true"
                                android:visibility="invisible"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/teamTwolottiOn"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                        android:background="@android:color/transparent"
                        android:id="@+id/team_third"
                        android:layout_width="250dp"
                        android:layout_height="100dp"
                        app:cardBackgroundColor="#444444"
                        app:cardCornerRadius="20dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginBottom="16dp"
                        app:layout_constraintStart_toStartOf="parent">

                    <LinearLayout android:layout_width="match_parent"
                                  android:orientation="horizontal"
                                  android:layout_height="match_parent">
                        <TextView android:layout_width="70dp"
                                  android:layout_height="wrap_content"
                                  android:text="새"
                                  android:textAlignment="center"
                                  android:id="@+id/team_three"
                                  android:transitionName="changeAct"
                                  android:layout_marginEnd="10dp"
                                  android:layout_marginStart="10dp"
                                  android:layout_gravity="center"
                                  android:textColor="#fff" android:textSize="18sp"/>
                        <View android:layout_width="2dp"
                              android:layout_height="match_parent"
                              android:background="#A6A6A6"
                        />
                        <com.airbnb.lottie.LottieAnimationView
                                app:lottie_fileName="8438-mr-cookie-drink.json"
                                app:lottie_autoPlay="false"
                                app:lottie_loop="true"
                                android:visibility="invisible"
                                android:focusable="false"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/teamThreelotti"/>
                        <com.airbnb.lottie.LottieAnimationView
                                app:lottie_fileName="35627-weather-day-clear-sky.json"
                                app:lottie_autoPlay="false"
                                app:lottie_loop="true"
                                android:visibility="invisible"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/teamThreelottiOn"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
