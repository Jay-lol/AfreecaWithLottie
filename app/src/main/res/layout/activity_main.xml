<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:fab="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000"
        tools:context=".view.MainActivity">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/refresh_layout"
            android:background="@android:color/transparent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000000"
                android:id="@+id/main_view">

            <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:lottie_fileName="10201-background-full-screen-night.json"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="false"
                    fab:layout_constraintTop_toTopOf="parent" fab:layout_constraintBottom_toBottomOf="parent"
                    fab:layout_constraintEnd_toEndOf="parent" fab:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/lottieAnimationView3"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="12dp"
                      android:id="@+id/midleft"
                      android:textSize="18sp"
                      android:textColor="#BCBCBC"
                      android:text="전체 시청자 : "
                      app:layout_constraintEnd_toStartOf="@id/middle"
                      app:layout_constraintTop_toTopOf="parent"/>
            <View android:layout_width="0.1dp" android:layout_height="0.1dp"
                  android:id="@+id/middle"
                  android:layout_marginStart="35dp"
                  android:layout_marginTop="20dp"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="21sp"
                    android:textColor="#EDFF49"
                    android:text="0"
                    android:fontFamily="@font/maplestory_bold"
                    android:id="@+id/nAllViewer"
                    app:layout_constraintStart_toStartOf="@id/middle"
                    app:layout_constraintTop_toTopOf="parent"/>
            <TextView android:layout_marginTop="12dp"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="16sp"
                      android:layout_marginStart="2dp"
                      android:text="명"
                      android:textColor="#BCBCBC"
                      android:fontFamily="@font/maplestory_bold"
                      app:layout_constraintStart_toEndOf="@id/nAllViewer"
                      app:layout_constraintTop_toTopOf="parent"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      fab:layout_constraintEnd_toStartOf="@id/middle"
                      fab:layout_constraintTop_toBottomOf="@id/midleft"
                      android:paddingTop="6dp"
                      android:textSize="16sp"
                      android:textColor="#BCBCBC"
                      android:text="이번 달 크루 풍력 : " android:id="@+id/textView2"/>
            <TextView
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#46E9FF"
                    android:text="0"
                    android:fontFamily="@font/maplestory_bold"
                    android:id="@+id/nAllBallon"
                    app:layout_constraintStart_toStartOf="@id/middle"
                    app:layout_constraintTop_toBottomOf="@id/midleft"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="*출처: 풍투데이 "
                      android:textColor="#B2FFFFFF"
                      android:textSize="12sp"
                      android:layout_marginTop="4dp"
                      android:id="@+id/poongtoday"
                      fab:layout_constraintTop_toBottomOf="@id/nAllBallon"
                      fab:layout_constraintEnd_toStartOf="@id/middle"
            />
            <ImageView
                    android:layout_width="55dp"
                    android:layout_height="22dp"
                    android:src="@drawable/logo2"
                    android:id="@+id/imageView"
                    app:layout_constraintTop_toBottomOf="@id/nAllBallon"
                    app:layout_constraintStart_toStartOf="@id/middle"/>

            <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintWidth_max="295dp"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintHeight_max="250dp"
                    app:layout_constrainedHeight="true"
                    android:layout_marginBottom="4dp"
                    app:cardBackgroundColor="#333333"
                    app:cardCornerRadius="20dp"
                    android:id="@+id/sujang" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/viewmid"
                    fab:layout_constraintTop_toBottomOf="@+id/imageView">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <com.airbnb.lottie.LottieAnimationView
                            android:layout_width="40dp"
                            android:layout_height="45dp"
                            fab:lottie_fileName="12246-info.json"
                            fab:layout_constraintEnd_toEndOf="parent"
                            fab:lottie_autoPlay="true"
                            fab:lottie_loop="true"
                            android:elevation="20dp"
                            fab:layout_constraintTop_toTopOf="parent"
                            android:id="@+id/moreInfo"
                            android:background="@android:color/transparent"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="4dp"/>
                    <ImageView android:layout_width="match_parent"
                               android:layout_height="0dp"
                               android:id="@+id/sujang_thumbnail"
                               app:layout_constraintBottom_toTopOf="@+id/view"
                               app:layout_constraintStart_toStartOf="parent"
                               app:layout_constraintEnd_toEndOf="parent"
                               app:layout_constraintTop_toTopOf="parent"/>
                    <com.airbnb.lottie.LottieAnimationView
                            app:lottie_fileName="8266-rest-sloth.json"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            app:lottie_loop="true"
                            android:visibility="invisible"
                            app:layout_constraintBottom_toTopOf="@id/view"
                            android:id="@+id/sujang_rest"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>
                    <View android:layout_width="match_parent"
                          android:layout_height="2dp"
                          android:layout_marginBottom="5dp"
                          app:layout_constraintBottom_toTopOf="@id/sujang_title"
                          android:background="#A6A6A6" android:id="@+id/view"/>
                    <TextView android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:textSize="16sp"
                              android:singleLine="true"
                              android:ellipsize="marquee"
                              android:layout_marginStart="8dp"
                              android:layout_marginEnd="8dp"
                              android:gravity="center"
                              android:text="로딩중"
                              android:layout_marginBottom="8dp"
                              android:id="@+id/sujang_title"
                              android:textColor="#E6FFFFFF"
                              app:layout_constraintBottom_toTopOf="@+id/sujanImportInfo"
                              app:layout_constraintStart_toStartOf="parent"
                              app:layout_constraintEnd_toEndOf="parent"/>


                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:gravity="center"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:id="@+id/sujanImportInfo"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toTopOf="@id/sujangInfoview">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#9899EC"
                                android:text="시조새"
                                android:maxWidth="80dp"
                                app:layout_constrainedWidth="true"
                                android:textSize="13sp"
                                android:singleLine="true"
                                android:ellipsize="marquee"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:id="@+id/sujangname"/>


                        <LinearLayout android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:layout_marginEnd="6dp"
                                      app:layout_constraintBottom_toBottomOf="@+id/sujangname"
                                      app:layout_constraintEnd_toEndOf="parent"
                                      app:layout_constraintHorizontal_bias="1"
                                      app:layout_constraintStart_toEndOf="@+id/sujangname"
                                      app:layout_constraintTop_toTopOf="@+id/sujangname">
                            <ImageView android:layout_width="wrap_content"
                                       android:layout_height="match_parent"
                                       android:src="@drawable/ic_baseline_people_alt_24"
                            />
                            <TextView
                                    android:id="@+id/view_cnt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:layout_gravity="center"
                                    android:textColor="#fff"
                            />
                        </LinearLayout>

                        <LinearLayout android:layout_width="wrap_content"
                                      android:layout_height="0dp"
                                      app:layout_constraintHorizontal_bias="0"
                                      app:layout_constraintStart_toStartOf="parent"
                                      app:layout_constraintTop_toTopOf="@id/sujangname"
                                      app:layout_constraintBottom_toBottomOf="@id/sujangname"
                                      app:layout_constraintEnd_toStartOf="@id/sujangname">

                            <ImageView android:layout_width="12dp"
                                       android:layout_height="match_parent"
                                       android:layout_gravity="center"
                                       android:src="@drawable/ic_baseline_star_border_24"
                            />
                            <TextView
                                    android:id="@+id/fan_cnt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="-"
                                    android:textSize="9sp"
                                    android:paddingTop="2dp"
                                    android:layout_marginStart="1dp"
                                    android:layout_gravity="center"
                                    android:textColor="#fff"
                            />
                            <ImageView android:layout_width="12dp"
                                       android:layout_marginStart="2dp"
                                       android:layout_height="match_parent"
                                       android:src="@drawable/ic_outline_thumb_up_alt_24"
                            />
                            <TextView
                                    android:id="@+id/ok_cnt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="-"
                                    android:textSize="9sp"
                                    android:paddingTop="2dp"
                                    android:layout_marginStart="1dp"
                                    android:layout_gravity="center"
                                    android:textColor="#fff"
                            />
                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <LinearLayout android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:id="@+id/sujangInfoview"
                                  android:layout_marginBottom="2dp"
                                  android:layout_marginEnd="8dp"
                                  android:layout_marginStart="8dp"
                                  app:layout_constraintBottom_toTopOf="@id/bjmore2"
                                  app:layout_constraintStart_toStartOf="parent"
                                  app:layout_constraintEnd_toEndOf="parent">

                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:text="오늘의 즐겨찾기 : "
                                  android:layout_gravity="center"
                                  android:textSize="9sp"
                                  android:textColor="#E4D5D5D5"/>

                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:id="@+id/incFanCnt"
                                  android:textAlignment="center"
                                  android:text="0"
                                  android:layout_gravity="center"
                                  android:textSize="9sp"
                                  android:textColor="#fff"/>

                        <LinearLayout android:layout_width="match_parent"
                                      android:layout_height="wrap_content"
                                      android:gravity="end">

                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                      android:text="일일 풍력 : "
                                      android:paddingStart="10dp"
                                      android:layout_gravity="center"
                                      android:textSize="9sp"
                                      android:textColor="#E4D5D5D5"/>

                            <TextView android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:textAlignment="viewEnd"
                                      android:textColor="#46E9FF"
                                      android:text="-"
                                      android:id="@+id/dballon"
                                      android:textSize="11sp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:layout_marginBottom="2dp"
                                  android:layout_marginEnd="8dp"
                                  android:layout_marginStart="8dp"
                                  android:id="@+id/bjmore2"
                                  android:gravity="end"
                                  app:layout_constraintBottom_toBottomOf="parent"
                                  app:layout_constraintStart_toStartOf="parent"
                                  app:layout_constraintEnd_toEndOf="parent"
                                  android:orientation="horizontal">

                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:text="월간 풍력 : "
                                  android:gravity="end"
                                  android:layout_gravity="center"
                                  android:textSize="9sp"
                                  android:textColor="#E4D5D5D5"/>

                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:textAlignment="viewEnd"
                                  android:layout_gravity="end"
                                  android:textColor="#46E9FF"
                                  android:text="-"
                                  android:id="@+id/mballon"
                                  android:textSize="11sp"/>
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

            <View android:layout_width="match_parent"
                  android:id="@+id/viewmid"
                  android:layout_height="0.01dp"
                  fab:layout_constraintStart_toStartOf="parent"
                  fab:layout_constraintEnd_toEndOf="parent"
                  fab:layout_constraintTop_toTopOf="parent"
                  fab:layout_constraintBottom_toBottomOf="parent"
                  fab:layout_constraintVertical_bias="0.5"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/alert_dialog2"
                    android:text="시조새로 검색"
                    android:textColor="#CCFFFFFF"
                    android:gravity="center"
                    android:id="@+id/search_sijosae"
                    android:paddingHorizontal="6dp"
                    android:elevation="4dp"
                    android:layout_marginBottom="4dp"
                    fab:layout_constraintStart_toStartOf="parent"
                    fab:layout_constraintEnd_toEndOf="parent"
                    fab:layout_constraintBottom_toTopOf="@+id/adView"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    fab:layout_constraintTop_toBottomOf="@+id/viewmid"
                    fab:layout_constraintEnd_toEndOf="parent"
                    fab:layout_constraintStart_toStartOf="parent"
                    fab:layout_constraintBottom_toTopOf="@id/adView"
                    android:weightSum="2"
                    android:id="@+id/linearLayout2">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        android:layout_marginStart="6dp"
                        android:layout_marginEnd="6dp"
                        android:layout_weight="1"
                        android:weightSum="2"
                >
                    <androidx.cardview.widget.CardView
                            android:id="@+id/team_first"
                            app:cardBackgroundColor="#444444"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="20dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            android:layout_marginEnd="8dp"
                    >
                        <LinearLayout android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:layout_gravity="bottom"
                                      android:layout_marginStart="16dp"
                                      android:layout_marginBottom="6dp"
                                      app:layout_constraintEnd_toEndOf="parent">
                            <ImageView android:layout_width="16dp"
                                       android:layout_height="match_parent"
                                       android:src="@drawable/ic_baseline_people_alt_24"/>
                            <TextView
                                    android:id="@+id/view_cnt_team1"
                                    android:layout_marginStart="2dp"
                                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:textColor="#fff"
                            />
                        </LinearLayout>
                        <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                            <TextView android:layout_width="70dp"
                                      android:layout_height="wrap_content"
                                      android:id="@+id/team_one"
                                      android:fontFamily="@font/maplestory_bold"
                                      android:text="시"
                                      android:textAlignment="center"
                                      android:layout_marginStart="6dp"
                                      android:layout_marginEnd="6dp"
                                      android:transitionName="changeAct"
                                      android:layout_gravity="center"
                                      android:textColor="#fff" android:textSize="18sp"/>

                            <View android:layout_width="2dp"
                                  android:layout_height="match_parent"
                                  android:background="#A6A6A6"
                            />
                            <com.airbnb.lottie.LottieAnimationView
                                    app:lottie_fileName="8438-mr-cookie-drink.json"
                                    app:lottie_autoPlay="false"
                                    app:lottie_loop="false"
                                    android:visibility="invisible"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/teamOnelotti"/>
                            <com.airbnb.lottie.LottieAnimationView
                                    app:lottie_fileName="35627-weather-day-clear-sky.json"
                                    app:lottie_autoPlay="false"
                                    app:lottie_loop="true"
                                    android:visibility="invisible"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/teamOnelottiOn"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                            android:id="@+id/team_second"
                            app:cardBackgroundColor="#444444"
                            android:layout_width="0dp"
                            app:cardCornerRadius="20dp"
                            app:layout_constraintWidth_max="200dp"
                            app:layout_constrainedWidth="true"
                            app:layout_constraintHeight_max="70dp"
                            app:layout_constrainedHeight="true"
                            android:layout_gravity="center"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            android:layout_marginStart="8dp">

                        <LinearLayout android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:layout_gravity="bottom"
                                      android:layout_marginStart="12dp"
                                      android:layout_marginBottom="6dp">

                            <ImageView android:layout_width="16dp"
                                       android:layout_height="match_parent"
                                       android:src="@drawable/ic_baseline_people_alt_24"/>
                            <TextView
                                    android:id="@+id/view_cnt_team2"
                                    android:layout_marginStart="2dp"
                                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:textColor="#fff"
                            />
                        </LinearLayout>

                        <LinearLayout android:layout_width="match_parent"
                                      android:orientation="horizontal"
                                      android:layout_height="match_parent">

                            <TextView android:layout_width="70dp"
                                      android:layout_height="wrap_content"
                                      android:text="조"
                                      android:id="@+id/team_two"
                                      android:textAlignment="center"
                                      android:transitionName="changeAct"
                                      android:layout_marginEnd="6dp"
                                      android:layout_marginStart="6dp"
                                      android:layout_gravity="center"
                                      android:textColor="#fff" android:textSize="18sp"/>

                            <View android:layout_width="2dp"
                                  android:id="@+id/line2"
                                  android:layout_height="match_parent"
                                  android:background="#A6A6A6"/>

                            <com.airbnb.lottie.LottieAnimationView
                                    app:lottie_fileName="8438-mr-cookie-drink.json"
                                    app:lottie_autoPlay="false"
                                    app:lottie_loop="false"
                                    android:visibility="invisible"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/teamTwolotti"/>
                            <com.airbnb.lottie.LottieAnimationView
                                    app:lottie_fileName="35627-weather-day-clear-sky.json"
                                    app:lottie_autoPlay="false"
                                    app:lottie_loop="true"
                                    android:visibility="invisible"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/teamTwolottiOn"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="0dp"
                              android:orientation="horizontal"
                              android:layout_weight="1"
                              android:layout_marginStart="6dp"
                              android:layout_marginEnd="6dp"
                              android:weightSum="2"
                >
                    <androidx.cardview.widget.CardView
                            android:background="@android:color/transparent"
                            android:id="@+id/team_third"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            app:layout_constraintWidth_max="200dp"
                            app:layout_constrainedWidth="true"
                            app:layout_constraintHeight_max="70dp"
                            app:layout_constrainedHeight="true"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            app:cardBackgroundColor="#444444"
                            app:cardCornerRadius="20dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="16dp"
                            android:layout_marginEnd="8dp">

                        <LinearLayout android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:layout_gravity="bottom"
                                      android:layout_marginStart="16dp"
                                      android:layout_marginBottom="6dp">

                            <ImageView android:layout_width="16dp"
                                       android:layout_height="match_parent"
                                       android:src="@drawable/ic_baseline_people_alt_24"/>
                            <TextView
                                    android:id="@+id/view_cnt_team3"
                                    android:layout_marginStart="2dp"
                                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:textColor="#fff"
                            />
                        </LinearLayout>

                        <LinearLayout android:layout_width="match_parent"
                                      android:orientation="horizontal"
                                      android:layout_height="match_parent">
                            <TextView android:layout_width="70dp"
                                      android:layout_height="wrap_content"
                                      android:text="새"
                                      android:textAlignment="center"
                                      android:id="@+id/team_three"
                                      android:transitionName="changeAct"
                                      android:layout_marginEnd="6dp"
                                      android:layout_marginStart="6dp"
                                      android:layout_gravity="center"
                                      android:textColor="#fff" android:textSize="18sp"/>
                            <View android:layout_width="2dp"
                                  android:layout_height="match_parent"
                                  android:background="#A6A6A6"
                            />
                            <com.airbnb.lottie.LottieAnimationView
                                    app:lottie_fileName="8438-mr-cookie-drink.json"
                                    app:lottie_autoPlay="false"
                                    app:lottie_loop="false"
                                    android:visibility="invisible"
                                    android:focusable="false"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/teamThreelotti"/>
                            <com.airbnb.lottie.LottieAnimationView
                                    app:lottie_fileName="35627-weather-day-clear-sky.json"
                                    app:lottie_autoPlay="false"
                                    app:lottie_loop="true"
                                    android:visibility="invisible"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
